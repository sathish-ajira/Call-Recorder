<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:text="S"
            android:textAllCaps="true"
            android:id="@+id/contact_char"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="@drawable/circle_textview"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="60dp"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/contact_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    tools:text="Sathish Kumar"
                    android:gravity="left"
                    android:textAllCaps="true" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="0.1"
                    android:layout_height="20dp"
                    android:id="@+id/cloud_img"
                    android:src="@drawable/cloud_done"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="right|top"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/orange"
                    android:id="@+id/category"
                    android:layout_weight="0.3"
                    tools:text="Bussiness"  />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.08"
                    android:tint="@color/green"
                    android:id="@+id/img_call_type"
                    android:src="@drawable/ic_leftarrow"/>

                <TextView
                    android:id="@+id/number"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="12dp"
                    android:textColor="@color/colorPrimary"
                    tools:text="+918015352654" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="match_parent"
                    android:gravity="right|center"
                    android:layout_marginRight="10dp"
                    android:textSize="12dp"
                    android:text="Jul 03,2017 03:34" />

              </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"/>

        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>